[[ $NXF_SCRATCH ]] && echo "nxf-scratch-dir $HOSTNAME:$NXF_SCRATCH" && cd $NXF_SCRATCH
rm -f hapmap1Family6.fam.assocSqueezed.assoc
ln -s /home/wpearse/Documents/Nextflow/work/48/d52aeb8b23046f7b9315f5671d1051/hapmap1Family6.fam.assocSqueezed.assoc hapmap1Family6.fam.assocSqueezed.assoc


